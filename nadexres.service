[Unit]
Description=NadexRes Telegram Mini App
After=network.target postgresql.service

[Service]
Type=simple
User=www-data
WorkingDirectory=/var/www/nadexres
Environment="PATH=/var/www/nadexres/venv/bin"
EnvironmentFile=/var/www/nadexres/.env
ExecStart=/var/www/nadexres/venv/bin/uvicorn main:app --host 0.0.0.0 --port 8000 --workers 2
Restart=always
RestartSec=10

[Install]
WantedBy=multi-user.target
